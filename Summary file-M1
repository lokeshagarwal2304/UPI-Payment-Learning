<div class="summary-container">
    <div class="summary-card">
        <h3>Total Transactions</h3>
        <p id="totalTransactions">0</p>
    </div>
    <div class="summary-card">
        <h3>Total Amount (₹)</h3>
        <p id="totalAmount">0</p>
    </div>
    <div class="summary-card">
        <h3>Highest Transaction (₹)</h3>
        <p id="highestTransaction">0</p>
    </div>
</div>

<style>
.summary-container {
    display: flex;
    gap: 15px;
    margin-bottom: 20px;
}
.summary-card {
    background: #ffffff;
    padding: 15px;
    border-radius: 8px;
    flex: 1;
    text-align: center;
    box-shadow: 0px 2px 10px rgba(0,0,0,0.1);
}
.summary-card h3 {
    margin-bottom: 8px;
    color: #2b7cff;
}
.summary-card p {
    font-size: 20px;
    font-weight: bold;
    color: #333;
}
</style>

<script>
function updateSummary() {
    let rows = document.querySelectorAll("#transactionTable tr");
    let totalTransactions = 0;
    let totalAmount = 0;
    let highestTransaction = 0;

    rows.forEach(row => {
        if (row.style.display !== "none") {
            let amount = parseFloat(row.cells[2].textContent);
            totalTransactions++;
            totalAmount += amount;
            if (amount > highestTransaction) highestTransaction = amount;
        }
    });

    document.getElementById("totalTransactions").textContent = totalTransactions;
    document.getElementById("totalAmount").textContent = totalAmount.toFixed(2);
    document.getElementById("highestTransaction").textContent = highestTransaction.toFixed(2);
}

// Call updateSummary initially and after every filter
updateSummary();
document.querySelector("button").addEventListener("click", updateSummary);
</script>
